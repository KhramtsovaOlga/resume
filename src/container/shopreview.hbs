<header>
  <div class='card py-1 px-3'>
    <div class='nav'>
      {{#with navigation}}
        {{#each links}}
          <a
            class='nav-item nav-link me-5'
            href='{{href}}'
          >{{text}}</a>
        {{/each}}
      {{/with}}
    </div>
  </div>
</header>

<main>
  <div class='row'>
    <div class='col-8 my-5'>
      {{#with formBlock}}
        <h1>{{header}}</h1>
        {{#with rating}}
          <p>{{title}}: {{value}}</p>
        {{/with}}
        {{#with actionBlock}}
          <div class='nav nav-tabs'>
            {{#each tabs}}
              <div class='nav-item'>
                <a href='#' class='nav-link'>{{text}}</a>
              </div>
            {{/each}}
          </div>

          <div class='my-5'>
            <hr />
          </div>

          <div class='card'>
            <div class='card-body'>
              {{#with report}}
                <p>{{title}}</p>
                {{#with button}}
                  <a
                    href='{{link}}'
                    class='btn btn-secondary'
                  >{{text}}</a>
                {{/with}}
              {{/with}}
            </div>
          </div>
        {{/with}}
        <div class='my-5'>
          {{#with feedbackBlock}}
            <h2>{{title}}</h2>
            {{#each buttons}}
              {{#with this}}
                <a class='btn
                 {{#if isWarning}} btn-warning {{/if}}
                 {{#if isSuccess}} btn-success {{/if}}
                 {{#if isDanger}} btn-danger {{/if}} mx-3' href='{{link}}'>{{text}}</a>
              {{/with}}
            {{/each}}
          {{/with}}
        </div>
      
    </div>
    <div class="col-4 my-5">
    <div class="card ">
        <div class="card-body">
            {{#with goodsInfo}}
            <img src="{{photo}}">
            <p class="my-2"><b>{{name}}</b></p>
            
        </div>
    </div>
    <div class="card my-3">
        <div class="card-body">
            <p><b>{{price}}</b></p>
            {{#if inMarket}}Є в наявності{{/if}}
            {{#each buttons}}
            <div class="my-3">
                 <a class="btn
                {{#if isPrimary}} btn-primary {{/if}}
                {{#if isSecondary}} btn-secondary {{/if}}" href="{{link}}">{{text}}</a>
                {{/each}}
            </div>
           </div>
    </div>
    </div>
     <div class="card my-3">
        <div class="card-body">
            {{#with seller}}
            <p>{{title}}: <b>{{value}}</b></p>
            {{/with}}
        </div>
    </div>
    {{/with}}
    {{/with}}
  </div>
        <div class='my-5'>
            <hr />
        </div>
  <div>
    {{>reviewItem}}
  </div>

  <div class="card bg-success">
    <div class="card-body text-center">
        {{#with service}}
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        {{#each buttons}}
        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
        {{/each}}
        {{/with}}

    </div>
  </div>
  
</main>

 <footer>
    <div class='nav'>
    {{#each footer}}
      <div class='nav-item col-2'>
        {{#each this}}
          <a
            class='nav-link mx-5'
            href='{{link}}'
          >{{text}}</a>
        {{/each}}
      </div>
    {{/each}}
    </div>
  </footer>