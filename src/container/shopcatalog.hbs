<header>
  <div class='card py-1 px-3'>
    <div class='nav'>
      {{#with navigation}}
        {{#each links}}
          <a
            class='nav-item nav-link me-5'
            href='{{href}}'
          >{{text}}</a>
        {{/each}}
      {{/with}}
    </div>
  </div>
</header>

<main>

  <nav aria-label='breadcrumb'>
    <ol class='breadcrumb my-5'>
      {{#each breadcrumb}}
        <li class='breadcrumb-item'><a
            href='{{url}}'
          >{{name}}</a></li>
      {{/each}}
    </ol>
  </nav>

  <h1>{{header}}</h1>

  <div class='row my-3'>
    {{#each sortBlock}}
      <div class='col-4'>
        <select class='form-select'>
          <option
            class='placeholder'
          >{{placeholder}}</option>
          {{#each options}}
            <option value='{{value}}'>{{text}}</option>
          {{/each}}
        </select>
      </div>
    {{/each}}
  </div>

  <div class='row'>
    {{#with filterBlock}}
      {{#with sellers}}
        <div class='card col-4 mx-1'>
          <div class='card-body'>
            <div class='form-label'>{{title}}</div>
            {{#each list}}
              <div class='form-check'>
                <label
                  class='form-check-label'
                >{{value}}</label>
                <input
                  type='checkbox'
                  class='form-check-input'
                />
              </div>
            {{/each}}
            {{/with}}
            <hr>
            {{#with brands}}
              <div>
                <label class='form-label'>{{title}}</label>
                <input class='form-control' />
                <option
                  class='placeholder'
                >{{placeholder}}</option>
                {{#each options}}
                    <div class='form-check'>
                <label
                  class='form-check-label'
                >{{value}}</label>
                <input
                  type='checkbox'
                  class='form-check-input'
                />
              </div>
                {{/each}}
              </div>
            {{/with}}
            <hr>
            {{#with price}}
            <div>
                <label class='form-label'>{{title}}</label>
                {{#with range}}
                  <input class='form-control my-3' placeholder="{{from}}" />
                  <input class='form-control my-3' placeholder="{{to}}" />
                {{/with}}
                {{#with button}}
                <a class="btn btn-outline-secondary" href="{{link}}">{{text}}</a>
                {{/with}}
                
            </div>
            {{/with}}

            <hr>

            {{#each filterList}}
             <div class='form-label'>{{title}}</div>
            {{#each options}}
              <div class='form-check'>
                <label
                  class='form-check-label'
                >{{value}}</label>
                <input
                  type='checkbox'
                  class='form-check-input'
                />
              </div>
              
              {{/each}}
              <hr>
            {{/each}}
          </div>
        </div>
        {{/with}}

        <div class="row col-8">
            {{#each goodsList}}
              {{>catalogItem}}
            {{/each}}
        
        </div>
        
  </div>

   <div class="card bg-success my-3">
    <div class="card-body text-center">
        {{#with service}}
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        {{#each buttons}}
        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
        {{/each}}
        {{/with}}

    </div>
  </div>

</main>

 <footer>
    <div class='nav'>
    {{#each footer}}
      <div class='nav-item col-2'>
        {{#each this}}
          <a
            class='nav-link mx-5'
            href='{{link}}'
          >{{text}}</a>
        {{/each}}
      </div>
    {{/each}}
    </div>
  </footer>