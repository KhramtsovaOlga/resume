<div class='card py-1 px-3'>
  <div class='nav'>
    {{#with navigation}}
      {{#each links}}
        <a
          class='nav-item nav-link me-5 {{#unless href}}disabled{{/unless}}'
           href='{{href}}'
        >{{text}}</a> 
      {{/each}}
    {{/with}}
  </div>
</div>

<h1 class='py-5'>{{header}}</h1>


<div class="row">
  <div class="col-8">
    {{#with contacts_data}}

    <h3 class='my-3'>{{title}}</h3>
    {{#with buttons}}
        {{#each this}}
        {{#if isPrimary}}<a class='btn btn-warning text-light'>{{text}}{{/if}}</a>
        {{#if isOutline}}<a class='btn btn-outline-warning'>{{text}}{{/if}}</a>
        {{/each}}
    {{/with}}
 
    {{#with form}}
    {{#with input}}
      {{#with surname}}
    
      <div class="row my-3">
        <div class="col-5">
          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">
          <div class="form-text text-danger">{{caption}}</div> 
        </div>
      {{/with}}
      {{#with name}}
         <div class="col-5">
          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">
          <div class="form-text text-danger">{{caption}}</div> 
        </div>
      {{/with}}
      {{#with phone}}
         <div class="col-5">
          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">
          <div class="form-text text-danger">{{caption}}</div> 
        </div>
      {{/with}}
      {{#with email}}
       <div class="col-5">
          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">
          <div class="form-text text-danger">{{caption}}</div> 
        </div>
      {{/with}}
      </div>
      
    {{/with}}

    <div class="my-5">
      <hr>
    </div>

    {{#each switch}}
    <div class="col-12 my-5">
           <div class="form-check form-switch">
            <label class="form-check-label">{{text}}</label>
            <input type="checkbox"
             class="form-check-input" {{#if isActive}}checked{{/if}}> 
          </div> 
        </div>
    {{/each}}
    {{/with}}
{{/with}}

    <div class="my-5">
      <hr>
    </div>
  {{#with delivery}}
    <h3>{{title}}</h3>
    {{#each select}}
    
     <label class="form-label">{{label}}</label>
          <select class="form-select">
            <option>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>  
            {{/each}}
          </select>
    {{/each}}

    {{#each delivery_type}}

      <div class="form-check py-3"></div>
      <input name="delivery" type="radio" class="form-check-input">
      <label class="form-check-label">{{type}}</label>
    {{/each}}

    <div class="my-5">
      <hr>
    </div>

    {{#with payment}}
    <h3>{{title}}</h3>
    {{#each list}}
      <div class="form-check"></div>
      <input name="payment" type="radio" class="form-check-input">
      <label class="form-check-label">{{type}}</label>
      <div class="ms-4">{{description}}</div>
    {{/each}}
    {{/with}}

    <div class="my-5">
      <hr>
    </div>

    {{#with contact}}
    <h3>{{title}}</h3>
      
     {{#with surname}}
      <div class="row">
        <div class="col-5">
          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">
          <div class="form-text text-danger">{{caption}}</div> 
        </div>
      {{/with}}
      {{#with name}}
         <div class="col-5">
          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">
          <div class="form-text text-danger">{{caption}}</div> 
        </div>
      {{/with}}
      {{#with phone}}
         <div class="col-5">
          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">
          <div class="form-text text-danger">{{caption}}</div> 
        </div>
      {{/with}}
      {{#with email}}
       <div class="col-5">
          <label class="form-label">{{label}}</label>
          <input class="form-control" placeholder="{{placeholder}}">
          <div class="form-text text-danger">{{caption}}</div> 
        </div>
      {{/with}}
      </div>
    {{/with}}

    <div class="my-5">
      <hr>
    </div>

    {{#with coment}}
    <div>
      <label class="form-label">{{label}}</label>
      <input class="form-control" placeholder="{{placeholder}}">
    </div>
    {{/with}}

  {{/with}}

   <div class="my-5">
      <hr>
    </div>

    {{#with coupon}}
    <h3>{{title}}</h3>
    {{#with select}}
      {{#with availabel_coupon}}
        <label class="form-label">{{label}}</label>
          <select class="form-select form-select-lg">
            <option>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>  
            {{/each}}
          </select>
      {{/with}}
      {{#with friend_coupon}}
        <label class="form-label">{{label}}</label>
          <select class="form-select form-select-sm">
            <option>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>  
            {{/each}}
          </select>
      {{/with}}
    {{/with}}

    {{#with add}}
        {{#with friend}}
          <div>
            <label class="form-label">{{label}}</label>
            <input class="form-control form-control-lg" placeholder="{{placeholder}}">
            <div class="form-text">{{caption}}</div>  
        </div>
        {{/with}}
        {{#with colleague}}
          <div>
            <label class="form-label">{{label}}</label>
            <input class="form-control form-control-sm" placeholder="{{placeholder}}">
            <div class="form-text">{{caption}}</div>  
        </div>
        {{/with}}
      {{/with}}
      {{/with}}

       <div class="my-5">
        <hr>
      </div>


       {{#with quiz}}
    <h3>{{title}}</h3>
      {{#with preference}}
         <div class="form-label">{{title}}</div>
         {{#each options}}
          <div class="form-check">
            <label class="form-check-label">{{this}}</label>
            <input name="gadget" type="radio" class="form-check-input">
          </div>
         {{/each}}
      {{/with}}

      {{#with your_expirience}}
         <div class="my-3">
          <label class="form-label">{{label}}</label>
          <input class="form-control">
        </div>
      {{/with}}

      {{#with purchase_frequency}}
         <label class="form-label">{{label}}</label>
          <select class="form-select">
            <option>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>  
            {{/each}}
          </select>
      {{/with}}

      {{#with factors}}
           <div class="form-label my-3">{{title}}</div>
         {{#each options}}
          <div class="form-check">
            <label class="form-check-label">{{this}}</label>
            <input type="checkbox" class="form-check-input">
          </div>
         {{/each}}
      {{/with}}

    {{/with}}



 <footer>
    <div class='nav'>
    {{#each footer}}
      <div class='nav-item col-2'>
        {{#each this}}
          <a
            class='nav-link mx-5'
            href='{{link}}'
          >{{text}}</a>
        {{/each}}
      </div>
    {{/each}}
    </div>
  </footer>

  </div>

 

  <div class="col-4">
    <div class="card">
  {{#each action_block}}
  <div class="card-body">
  <div class="btn 
  {{#if isSuccess}}btn-success{{/if}}
  {{#if isDanger}}btn-danger{{/if}}
  {{#if isInfo}}btn-info{{/if}}">{{text}}</div>
  </div>
  {{/each}}
</div>

<div class="card my-3">
  <div class="card-body">
  {{#with total}}
    <h3>{{title}}</h3>
    {{#each item_list}}
    <div>{{name}}: {{price}}</div>
    {{/each}}
    <hr>
    {{#each additional_info}}
    <div>{{text}}: {{value}}</div>
    {{/each}}
    <hr>
    {{#with total_price}}
    <div>{{text}}: {{value}}</div>
    {{/with}}
    <hr>
    {{#each button}}
    <div class="btn 
    {{#if isPrimary}} btn-primary
    {{else}}btn-outline-primary{{/if}} my-2">{{text}}</div>
    {{/each}}
  {{/with}}
  </div>
  </div>
</div>


</div>