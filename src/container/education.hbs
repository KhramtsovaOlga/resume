

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="Education" big=true}}
                <ul>
                    {{#each educations}}
                        <li>{{name}}</li>
                            {{#unless isEnd includeZero=false}}
                                (ще в процесі) 
                            {{/unless}}
                    {{/each}}
                </ul>
            </section>
            <section>
                {{> title data="My certificates" big=false}}
                <ul>
                    {{#each certificates}}
                    <li>{{name}} ({{id}})</li>
                    {{/each}}
                </ul>
            </section>
        </main>
     {{/with}}
</div>
