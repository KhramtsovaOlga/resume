<div class='card py-1 px-3'>
  <div class='nav'>
    {{#with navigation}}
      {{#each links}}
        <a
          class='nav-item nav-link me-5'
          href='{{href}}'
        >{{text}}</a>
      {{/each}}
    {{/with}}
  </div>
</div>

<div>
  {{#with newsBlock}}
    <h3 class='text-center my-5'>{{title}}</h3>

    <section class='row g-3'>
      {{#each cards}}
        <div class='card text-bg-dark col-3 my-1'>
          <div class='my-2'><b>{{title}}</b>{{#if
              isTop
            }}<button
                class='btn btn-success rounded-pill'
              >Top</button>{{/if}}{{#if isNew}}<button
                class='btn btn-danger rounded-pill'
              >New</button>{{/if}}</div>
          <p>{{description}}</p>
        </div>
      {{/each}}
    </section>

  {{/with}}
</div>

<hr class='my-5' />

{{#with goodsBlock}}
  <div class='nav nav-tabs mb-5'>
    {{#each tabs}}
      <div class='nav-link'>{{text}}</div>
    {{/each}}
  </div>

  <div class='row'>
    {{#each cards}}
      <section class='col-4'>
        <img
          class='card-img-top'
          src='{{image}}'
          alt='product photo'
        />
        <div class='card'>
          <div class='card-body'>
            <div class='m-1'><b>{{title}}</b></div>
            <p>{{description}}</p>
            {{#if isHot}}<button
                class='btn btn-warning rounded-pill'
              >HOT</button>{{/if}}
            {{#if isNew}}<button
                class='btn btn-primary rounded-pill'
              >New</button>{{/if}}
          </div>
        </div>
      </section>
    {{/each}}
  </div>
{{/with}}

<hr class='my-5' />

<div class='card text-bg-dark'>
  {{#with subscribe}}
    <div class='card-body'>
      <h2 class='my-3'>{{header}}</h2>
      <p>{{description}}</p>

      {{#each buttons}}
        <a
          class='btn text-bg-primary nav-link col-3 my-3'
          href='{{link}}'
        >{{text}}</a>
      {{/each}}
    </div>
  {{/with}}
</div>

<hr class='my-5' />

{{#with service}}
  <div class='card'>
    <div class='card-body text-bg-success text-center py-3'>
      <h5>{{title}}</h5>
      <p>{{description}}</p>
      {{#each buttons}}
        <a
          class='btn btn-primary'
          href='{{link}}'
        >{{text}}</a>
      {{/each}}
    </div>
  </div>
{{/with}}

{{#each footer}}
  <div class='nav'>
    {{#each this}}
      <a
        class='nav-item nav-link mx-5'
        href='{{link}}'
      >{{text}}</a>
    {{/each}}
  </div>
{{/each}}