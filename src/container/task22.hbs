<div>
  {{#with page_header}}
    <h1 class='text-center'>{{title}}</h1>
    <p
      class='text-center text-uppercase'
    >{{description}}</p>
  {{/with}}
</div>

{{#with section}}
  <div class='card'>
    <div class='card-body'>
      {{#with about_us}}
        {{#with title_list}}
          <div class='display-6 text-end'>{{main}}</div>
          <h6 class='text-end'>{{sub}}</h6>
        {{/with}}
        {{#with button}}
          <button
            class='btn btn-outline-info'
          >{{text}}</button>
        {{/with}}
      {{/with}}
    </div>
  </div>
  <br />
  {{#with advantage}}
    <div class='card'>
      <div class='card-body'>
        <div class='display-5'>{{title}}</div>

        {{#with efficiency}}
          <div class='card'>
            <div class='card-body'>
              <div class='display-6'>{{title}}</div>
              <h6>{{sub_title}}</h6>
              <p>{{description}}</p>
              <button
                class='btn btn-outline-warning'
              >{{button}}</button>
            </div>
          </div>
        {{/with}}
        <br />
        {{#with innovation}}
          <div class='card'>
            <div class='card-body'>
              <div
                class='display-6 text-center'
              >{{title}}</div>
              <h6 class='text-center'>{{sub_title}}</h6>
              <p class='text-center'>{{description}}</p>
                <button
                class='btn btn-outline-warning'
              >{{button}}</button>
            </div>
          </div>
        {{/with}}
        <br>
        {{#with collaboration}}
            <div class='card'>
                <div class='card-body'>
                <div
                    class='display-6 text-end'
                >{{title}}</div>
                <h6 class='text-end'>{{sub_title}}</h6>
                <p class='text-end'>{{description}}</p>
                    <button
                    class='btn btn-outline-warning'
                >{{button}}</button>
                </div>
          </div>
        {{/with}}
        </div>    
      </div>
    </div>
  {{/with}}
    <br>
  {{#with agreement}}
  <div class="card">
    <div class="card-body">
        <div class='display-5'>{{title}}</div>
        <div class="card">
            <div class="card-body">
                {{#with info}}
                <h5>{{sub_title}}</h5>
                {{#with detail}}
                <p>{{text}}</p>
                <button class="btn btn-success">{{button}}</button>
                {{/with}}
                {{/with}}
            </div>
        </div>
    </div>
  </div>
  {{/with}}
{{/with}}