{{#each reviewList}}
  <div class='card my-3 py-1'>
    <div class='card-body'>
      {{#with this}}
        {{#with title}}
          <p><b>{{userName}}</b></p>
          <p>{{caption}}</p>
          <p>{{date}}</p>
        {{/with}}
        <hr />
        {{#with reviewBody}}
          {{#with seller}}
            <p>{{title}}: {{value}}</p>
          {{/with}}
          {{#with rating}}
            <p>{{title}}: {{value}}</p>
          {{/with}}
          {{#each text}}
            <p>{{this}}</p>
          {{/each}}
          <div>
            {{#with advantages}}
              <p><b>{{title}}</b></p>
              <p>{{text}}</p>
            {{/with}}
          </div>
          <div>
            {{#with disadvantages}}
              <p><b>{{title}}</b></p>
              <p>{{text}}</p>
            {{/with}}
          </div>
          <div>
            {{#each images}}
              <img src='{{this}}' />
            {{/each}}
          </div>
          {{#each coments}}
            <div class='card my-3'>
              <div class='card-body'>
                <p>{{userName}}</p>
                <p>{{date}}</p>
                <p>{{text}}</p>
              </div>
            </div>
          {{/each}}
        {{/with}}
      {{/with}}
    </div>
  </div>
{{/each}}